{
  "embedder": {
    "client_class": "AzureAIClient",
    "batch_size": 500,
    "initialize_kwargs": {
      "api_version": "${AZURE_OPENAI_EMBEDDING_API_VERSION}",
      "azure_endpoint": "${AZURE_OPENAI_ENDPOINT}"
    },
    "model_kwargs": {
      "model": "${AZURE_OPENAI_EMBEDDING_DEPLOYMENT}",
      "encoding_format": "float"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}
